<h2 class="page-header">Profiler Collections<h2>

<div class="row">
  <div class="col-md-5">
    <h4>mongo_profiler</h4>
    <pre><code><%= @collection_profiler_stats %></code></pre>
  </div>

  <div class="col-md-5">
    <h4>mongo_profiler_config</h4>
    <pre><code><%= @collection_config_stats %></code></pre>
  </div>
</div>
<script>
$(function() {
    $('pre code').each(function(i, e) {
      var json = JSON.parse($(this).html());
      $(this).html(JSON.stringify(json, null, 4));
      hljs.highlightBlock(this);
    });
});
</script>
